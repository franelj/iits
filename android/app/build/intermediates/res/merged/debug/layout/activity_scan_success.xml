<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.csusm.twinder.ScanSuccessActivity">

    <ImageView
        android:id="@+id/scanEventImage"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <android.support.v7.widget.CardView
        android:layout_below="@id/scanEventImage"
        android:padding="2dp"
        android:id="@+id/eventDetailsCard"
        android:layout_marginTop="5dp"
        android:layout_width="fill_parent"
        android:layout_height="100dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:padding="5dp"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:textSize="15sp"
                android:id="@+id/eventName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:paddingLeft="5dp"
                android:layout_below="@+id/eventName"
                android:id="@+id/dateIcon"
                android:src="@drawable/ic_event_blue_grey_900_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_toRightOf="@+id/dateIcon"
                android:layout_below="@+id/eventName"
                android:paddingLeft="5dp"
                android:text="@string/app_name"
                android:id="@+id/dateValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:layout_below="@+id/dateValue"
                android:id="@+id/locationIcon"
                android:src="@drawable/ic_location_on_blue_grey_900_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_toRightOf="@+id/locationIcon"
                android:layout_below="@+id/dateValue"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:text="@string/app_name"
                android:id="@+id/locationValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_below="@id/eventDetailsCard"
        android:padding="2dp"
        android:layout_marginTop="5dp"
        android:layout_width="fill_parent"
        android:layout_height="200dp">
        <TextView
            android:id="@+id/description"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.v7.widget.CardView>
</RelativeLayout>
